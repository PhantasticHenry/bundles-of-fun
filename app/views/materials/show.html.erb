<table>
    <tr>
        <th>Name</th>
        <th>Color</th>
        <th>Size</th>
        <th>SKU</th>
        <th>Category</th>
    </tr>
        <td><%= @material.name %></td>
        <td><%= @material.color %></td>
        <td><%= @material.size %></td>
        <td><%= @material.sku %></td>
        <td><%= @material.category %></td>
    </tr>
</table>
<hr>
<%= button_to "Edit", edit_material_path(@material), method: :get, class: "btn btn-primary" %><br>
<%= button_to "Delete", material_path(@material), method: :delete, class: "btn btn-primary",data: {confirm: "Are you sure?"} %><hr>
<%= button_to "Back", :back, class: "btn btn-primary", method: :get %>

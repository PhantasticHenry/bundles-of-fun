<h2 class="po-index-heading mb-4">All Materials</h2>
<%= render partial: 'shared/flash_errors', locals: {model: @material} %>

<table>
    <tr>
        <th>Name</th>
        <th>Color</th>
        <th>Size</th>
        <th>SKU</th>
        <th>Category</th>
        <% @materials.each do |m| %>
    </tr>
        <td><%= button_to m.name, product_path(m), method: "get" %></td>
        <td><%= m.color %></td>
        <td><%= m.size %></td>
        <td><%= m.sku %></td>
        <td><%= m.category %></td>
    </tr>
        <% end %>
</table>
<br>
<%= button_to "New Material", new_material_path, method: "get", class: "btn btn-primary" %><hr>
<%= button_to "Back", :back, class: "btn btn-primary", method: :get %>
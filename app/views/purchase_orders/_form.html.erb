<%= render partial: 'shared/errors', locals: {model: @user} %>
<br>
<%= form_for @purchase_order do |f| %>
    <%= f.text_field :po, placeholder: "Purchase Order", required: true, class: "form-control", autofocus: true %><br>
    <%= f.text_field :bin, placeholder: "BIN", required: true, class: "form-control" %><br>
    <%= f.text_field :start_date, placeholder: "Start Date", required: true, class: "form-control" %><br>
    <%= f.text_field :completion_date, placeholder: "Complete By", required: true, class: "form-control" %><br>
    <%= f.button "Create New Purchase Order", class: "btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" %>
<% end %>
            
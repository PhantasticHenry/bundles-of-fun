<h2 class="po-index-heading mb-4">All Purchase Orders!</h2>    
<%= render partial: 'shared/flash_errors', locals: {model: @product} %>
<table>
    <tr>
        <th>P.O. Number</th>
        <th>BIN</th>
        <th>Start Date</th>
        <th>Exit Date</th>
        <% @purchase_orders.each do |po| %>
    </tr>
        <td><%= button_to po.po, purchase_order_path(po), method: "get" %></td>
        <td><%= po.bin %></td>
        <td><%= po.start_date %></td>
        <td><%= po.completion_date %></td>
    </tr>
        <% end %>
</table>
<br>
<%= button_to "New Purcahse Order", new_purchase_order_path, method: "get", class: "btn btn-primary" %><hr>
<%= button_to "Back", :back, class: "btn btn-primary", method: :get %>



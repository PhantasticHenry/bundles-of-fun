<h2 class="po-index-heading mb-4">All Products</h2>

<%= render "products" %>

<select onchange="window.location=this.value">
  <option>View by Type</option>
  <% @products.each do |p| %> 
    <option value="/<%= p.category %>"><%= p.category.titlecase %></option>
  <% end %>
</select><br><br>

<%= link_to "New Product", new_product_path, class: "btn btn-primary" %>&nbsp;&nbsp;&nbsp; OR &nbsp;&nbsp;&nbsp;
<%= link_to "Add Product to P.O.", new_po_product_path, class: "btn btn-primary" %><hr>
<%= link_to "Back", :back, class: "btn btn-primary" %>
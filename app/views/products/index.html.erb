<h2 class="po-index-heading mb-4">All Products</h2>
<%= render partial: 'shared/flash_errors', locals: {model: @product} %>

<table>
    <tr>
        <th>Name</th>
        <th>Color</th>
        <th>Size</th>
        <th>SKU</th>
        <th>Category</th>
        <% @products.each do |p| %>
    </tr>
        <td><%= button_to p.name, product_path(p), method: "get" %></td>
        <td><%= p.color %></td>
        <td><%= p.size %></td>
        <td><%= p.sku %></td>
        <td><%= p.category %></td>
    </tr>
        <% end %>
</table>
<br>
<%= button_to "New Product", new_product_path, method: :get, class: "btn btn-primary" %><br>
<%= button_to "Add Product to P.O.", new_po_product_path, method: :get, class: "btn btn-primary" %><hr>
<%= button_to "Back", :back, class: "btn btn-primary", method: :get %>
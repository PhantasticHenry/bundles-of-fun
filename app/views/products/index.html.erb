<% if flash[:alert] %>
    <h2 style="color:red;", class="po-index-heading mb-4"><%= flash[:alert] %></h2>
<% else %>
    <h2 class="po-index-heading mb-4">All Products</h2>
<% end %>

<table>
    <tr>
        <th>Name</th>
        <th>Color</th>
        <th>Size</th>
        <th>SKU</th>
        <th>Category</th>
        <% @products.each do |p| %>
    </tr>
        <td><%= button_to p.name, product_path(p), method: "get" %></td>
        <td><%= p.color %></td>
        <td><%= p.size %></td>
        <td><%= p.sku %></td>
        <td><%= p.category %></td>
    </tr>
        <% end %>
</table>
<br>
<%= button_to "New Product", new_product_path, method: "get", class: "btn btn-primary" %><hr>
<%= button_to "Back", :back, class: "btn btn-primary", method: :get %>
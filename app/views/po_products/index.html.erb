<h2 class="po-index-heading mb-4">Products</h2>

<table>
    <tr>
        <th>Purchase Order</th>
        <th>Name</th>
        <th>Color</th>
        <th>Size</th>
        <th>SKU</th>
        <th>Category</th>
        <% @po_products.each do |p| %>
    </tr>
        <td><%= p.purchase_order.po %></td>
        <td><%= button_to p.product.name, product_path(p.product.id) %></td>
        <td><%= p.product.color %></td>
        <td><%= p.product.size %></td>
        <td><%= p.product.sku %></td>
        <td><%= p.product.category %></td>
    </tr>
        <% end %>
</table>
<br>



<% if @purchase_order %>
    <h2 class="po-index-heading mb-4">Product of Purchase Order # <%= @purchase_order.try(:po) %></h2>
<% else %>
    <h2 class="po-index-heading mb-4">Purchase Order Products</h2>
<% end %>
<%= render partial: 'shared/flash_errors', locals: {model: @po_product} %>


<table>
    <tr>
        <th>Name</th>
        <th>Color</th>
        <th>Size</th>
        <th>SKU</th>
        <th>Category</th>
        <th>Quantity</th>
        <% @po_products.each do |p| %>
    </tr>
        <td><%= button_to p.product.name, purchase_order_path(p.purchase_order), method: :get %></td>
        <td><%= p.product.color.titlecase %></td>
        <td><%= p.product.size.upcase %></td>
        <td><%= p.product.sku %></td>
        <td><%= p.product.category.titlecase %></td>
        <td><%= button_to p.quantity, edit_purchase_order_po_product_path(p.purchase_order, p), method: :get %></td>
    </tr>
        <% end %>
</table>
<hr>
<%= link_to "Back", :back, class: "btn btn-primary" %>


